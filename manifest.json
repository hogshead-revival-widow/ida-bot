{
  "manifest_version": 2,
  "name": "IDA-Bot",
  "version": "0.0.9",
  "description": "Vereinfacht die Suche im Pressearchiv",
  "icons": {
    "48": "icons/voebbot48.png",
    "96": "icons/voebbot96.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://127.0.0.1:5000/*"
  ],
  "web_accessible_resources": [
    "css/*", "icons/*"
  ],
  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "build/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.zeit.de/*",
        "*://www.sueddeutsche.de/*",
        "*://www.faz.net/*",
        "*://zeitung.faz.net/*",
        "*://www.stuttgarter-zeitung.de/*",
        "*://www.welt.de/*",
        "*://bnn.de/*",
        "*://www.cicero.de/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "build/content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "options/options.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/voebbot19.png",
      "38": "icons/voebbot38.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "IDA-Bot"
  }
}

